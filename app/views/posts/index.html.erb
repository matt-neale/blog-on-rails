<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-4">
      <div id="index-cards" class="card">
        <div class="card-body">
        <%= link_to post do %>
          <h5 class="card-title"><%= post.title %></h5>
          <% end %>
          <p class="card-text"><%= post.body %> </p>
          
        </div>
      </div>
    <br>
    </div>
  <% end %>
</div>